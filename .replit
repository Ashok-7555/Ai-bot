modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "arrow-cpp", "bash", "ffmpeg-full", "fontconfig", "freetype", "gdk-pixbuf", "geckodriver", "gitFull", "glibcLocales", "gtk2-x11", "lcms2", "libGL", "libGLU", "libcxx", "libimagequant", "libjpeg", "libpng", "libpulseaudio", "libtiff", "libwebp", "libxcrypt", "mtdev", "ocl-icd", "openal", "opencl-headers", "openjpeg", "openssl", "pkg-config", "portmidi", "postgresql", "py-spy", "sqlite", "tcl", "tk", "unzip", "xsimd", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
